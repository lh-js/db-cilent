{
  "name": "neurix-db-client",
  "version": "1.0.0",
  "description": "Database connection client built with Electron",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -w --project tsconfig.main.json",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc --project tsconfig.main.json",
    "build:renderer": "vite build",
    "check-deps": "node scripts/check-deps.js",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win"
  },
  "keywords": [
    "electron",
    "database",
    "client"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^9.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "png2icons": "^2.0.1",
    "typescript": "^5.7.3",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "denque": "^2.1.0",
    "generate-function": "^2.3.1",
    "iconv-lite": "^0.7.1",
    "@ioredis/commands": "^1.2.0",
    "ioredis": "^5.8.2",
    "long": "^5.3.2",
    "lru.min": "^1.1.3",
    "mysql2": "^3.15.3",
    "named-placeholders": "^1.1.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "safer-buffer": "^2.1.2",
    "seq-queue": "^0.0.5",
    "sqlstring": "^2.3.3",
    "uuid": "^9.0.0"
  },
  "build": {
    "appId": "com.neurix.dbclient",
    "productName": "Neurix DB Client",
    "icon": "build/icon.png",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns"
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "icon": "build/icon.png"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "!node_modules/**/node_gyp_bins/**/*"
    ],
    "asar": true,
    "asarUnpack": [
      "node_modules/mysql2/**/*",
      "node_modules/ioredis/**/*",
      "node_modules/@ioredis/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
